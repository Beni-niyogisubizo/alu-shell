#!/usr/bin/env bash
# This script manages the manage_my_process daemon.

PID_FILE="/var/run/my_process.pid"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi

    # Start the daemon process
    /path/to/manage_my_process.sh &  # Update with the actual path to your daemon script
    echo $! > "$PID_FILE"            # Save the PID of the background process
    echo "manage_my_process started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        exit 1
    fi

    kill $(cat "$PID_FILE")            # Terminate the daemon process
    rm -f "$PID_FILE"                  # Remove the PID file
    echo "manage_my_process stopped"
}

restart() {
    stop                               # Stop the daemon first
    start                              # Start it again
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

