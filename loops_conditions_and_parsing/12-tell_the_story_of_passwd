#!/usr/bin/env bash
# This script displays the contents of the /etc/passwd file in a formatted story-like output.

# Set IFS to colon for parsing /etc/passwd entries
IFS=:

# Open /etc/passwd file for reading
while read -r username password user_id group_id full_name home_directory shell; do
  # Format the output as specified
  echo "The user $username is part of the $group_id gang, lives in $home_directory and rides $shell. User $user_id's place is protected by the passcode $password, more info about the user here: $full_name."
done < /etc/passwd

