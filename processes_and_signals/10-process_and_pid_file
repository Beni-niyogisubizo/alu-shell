#!/usr/bin/env bash
# This script writes "To infinity and beyond" indefinitely and handles specific signals.

PID_FILE="/var/run/myscript.pid"

# Create the PID file with the current script's PID
echo $$ > "$PID_FILE"

# Define cleanup function to delete the PID file and terminate the script
cleanup() {
    rm -f "$PID_FILE"
    exit 0
}

# Define signal handling functions
handle_sigterm() {
    echo "I hate the kill command"
    cleanup
}

handle_sigint() {
    echo "Y U no love me?!"
}

# Trap signals
trap 'handle_sigterm' SIGTERM
trap 'handle_sigint' SIGINT
trap 'cleanup' SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done

