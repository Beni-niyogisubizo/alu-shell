#!/usr/bin/env bash
# This script displays "Best School" 10 times, and for the 9th iteration, it displays "Best School" followed by "Hi" on a new line.

# Initialize a counter variable
counter=1

# Use a while loop to display "Best School" 10 times
while [ "$counter" -le 10 ]; do
  # Display "Best School"
  echo "Best School"

  # For the 9th iteration, display "Hi" on a new line
  if [ "$counter" -eq 9 ]; then
    echo "Hi"
  fi

  # Increment the counter
  ((counter++))
done
