#!/usr/bin/env bash
# This script loops from 1 to 20, displaying numbers and specific "bad luck" messages for the 4th, 9th, and 17th iterations.

# Initialize a counter variable
counter=1

# Use a while loop to iterate from 1 to 20
while [ "$counter" -le 20 ]; do
  # Use a case statement to check for specific iterations
  case $counter in
    4)
      echo "$counter"
      echo "bad luck from China"
      ;;
    9)
      echo "$counter"
      echo "bad luck from Japan"
      ;;
    17)
      echo "$counter"
      echo "bad luck from Italy"
      ;;
    *)
      # For all other iterations, just display the number
      echo "$counter"
      ;;
  esac

  # Increment the counter
  ((counter++))
done
