#!/usr/bin/env bash
# This script loops from 1 to 10, displaying different messages for the 4th, 8th, and other iterations.

# Initialize a counter variable
counter=1

# Use a while loop to iterate from 1 to 10
while [ "$counter" -le 10 ]; do
  # If the counter is 4, display "bad luck"
  if [ "$counter" -eq 4 ]; then
    echo "bad luck"
  # If the counter is 8, display "good luck"
  elif [ "$counter" -eq 8 ]; then
    echo "good luck"
  # For all other iterations, display "Best School"
  else
    echo "Best School"
  fi

  # Increment the counter
  ((counter++))
done
