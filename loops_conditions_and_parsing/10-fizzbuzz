#!/usr/bin/env bash
# This script displays numbers from 1 to 100 with FizzBuzz logic.

# Loop through numbers from 1 to 100
for ((i = 1; i <= 100; i++)); do
  # Check for FizzBuzz
  if (( i % 3 == 0 && i % 5 == 0 )); then
    echo "FizzBuzz"
  # Check for Fizz
  elif (( i % 3 == 0 )); then
    echo "Fizz"
  # Check for Buzz
  elif (( i % 5 == 0 )); then
    echo "Buzz"
  # Print the number
  else
    echo "$i"
  fi
done

