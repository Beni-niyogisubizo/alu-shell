#!/usr/bin/env bash
# This script manages the manage_my_process daemon by starting, stopping, or restarting it.

PID_FILE="/var/run/my_process.pid"
LOG_FILE="/var/log/manage_my_process.log"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi

    # Start the daemon process and redirect stdout/stderr to a log file
    /path/to/manage_my_process.sh &> "$LOG_FILE" &
    
    echo "$!" > "$PID_FILE"   # Save the PID of the background process
    echo "manage_my_process started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        exit 1
    fi

    # Safely terminate the daemon process
    if kill "$(cat "$PID_FILE")"; then
        rm -f "$PID_FILE"      # Remove the PID file only if the process was killed
        echo "manage_my_process stopped"
    else
        echo "Failed to stop manage_my_process."
        exit 1
    fi
}

restart() {
    echo "manage_my_process restarted"
    stop                      # Stop the daemon first
    start                     # Start it again
}

# Validate the argument passed to the script
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"  # Ensure script name is dynamic
        exit 1
        ;;
esac

